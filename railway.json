{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks"
  },
  "deploy": {
    "startCommand": "sh -c 'gunicorn core.asgi:application -k uvicorn.workers.UvicornWorker --bind 0.0.0.0:$PORT'",
    "restartPolicyType": "on_failure",
    "restartPolicyMaxRetries": 3
  },
  "services": [
    {
      "name": "web",
      "plan": "hobby"
    },
    {
      "name": "postgresql",
      "plan": "hobby"
    },
    {
      "name": "redis", 
      "plan": "hobby"
    }
  ]
} 