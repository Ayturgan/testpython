{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks"
  },
  "deploy": {
    "startCommand": "python manage.py migrate && python manage.py collectstatic --noinput && daphne -b 0.0.0.0 -p $PORT core.asgi:application",
    "restartPolicyType": "on_failure",
    "restartPolicyMaxRetries": 3
  },
  "services": [
    {
      "name": "web",
      "plan": "hobby"
    },
    {
      "name": "postgresql",
      "plan": "hobby"
    },
    {
      "name": "redis", 
      "plan": "hobby"
    }
  ]
} 